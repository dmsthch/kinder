  	<!-- test_equipment_value(plus,minus) insert -->
   	<insert id="addTestEquipmentValueMinus" parameterType="com.cafe24.dmsthch.Equipment.EquipmentValue">
  		INSERT INTO test_equipment_value_minus(
			 equipment_no
			,equipment_cost
			,equipment_amount
			,equipment_customer
			,equipment_day)
		VALUES(
			 #{equipmentNo}
			,#{equipmentCost}
			,#{equipmentAmount}
			,#{equipmentCustomer}
			,now()
		);
  	</insert>
  	<insert id="addTestEquipmentValuePlus" parameterType="com.cafe24.dmsthch.Equipment.EquipmentValue">
  		INSERT INTO test_equipment_value_plus(
			 equipment_no
			,equipment_cost
			,equipment_amount
			,equipment_customer
			,equipment_day)
		VALUES(
